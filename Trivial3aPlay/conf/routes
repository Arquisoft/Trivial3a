# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /menu                       controllers.Application.menu()
GET     /game                       controllers.Application.game()

POST    /					        controllers.Application.createGame()
POST	/registro					controllers.Application.newRegister()
POST	/login						controllers.Application.newLogin()

GET		/move/:direction			controllers.Application.move(direction: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)