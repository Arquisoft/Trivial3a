# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /menu                       controllers.Application.menu()
GET		/createGame					controllers.Application.createGame()
GET     /game                       controllers.Application.game()
GET		/salir						controllers.Application.logout()
POST	/createGame					controllers.Application.game()


POST	/registro					controllers.Application.newRegister()
POST	/login						controllers.Application.newLogin()

GET		/rollDice					controllers.Application.rollDice()
GET 	/move/:direction			controllers.Application.move(direction: String)
GET		/answer/:id					controllers.Application.answer(id: Int)
GET		/getPosition				controllers.Application.getPosition()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)